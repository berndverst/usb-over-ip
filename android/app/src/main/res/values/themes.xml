<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for mobile -->
    <style name="Theme.VUSBClient" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>
    
    <!-- Theme for Android TV (Leanback) -->
    <style name="Theme.VUSBClient.Leanback" parent="Theme.Leanback">
        <item name="android:windowBackground">@color/tv_background</item>
        <item name="defaultBrandColor">@color/tv_brand_color</item>
        <item name="defaultSearchColor">@color/primary_light</item>
    </style>
    
    <!-- Dialog theme -->
    <style name="Theme.VUSBClient.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
    </style>
</resources>
